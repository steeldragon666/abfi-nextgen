{
  "version": 2,
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist/public",
  "installCommand": "pnpm install",
  "functions": {
    "api/health.ts": {
      "maxDuration": 5,
      "memory": 128
    },
    "api/trpc/routers/*.ts": {
      "maxDuration": 30,
      "memory": 512,
      "includeFiles": "api/_lib/**"
    },
    "api/trpc/[trpc].ts": {
      "maxDuration": 60,
      "memory": 1024,
      "includeFiles": ["api/_lib/**", "server/**", "drizzle/**"]
    },
    "api/**/*.ts": {
      "maxDuration": 30,
      "includeFiles": "api/_lib/**"
    }
  },
  "rewrites": [
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
