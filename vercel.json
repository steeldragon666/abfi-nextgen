{
  "version": 2,
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist/public",
  "installCommand": "pnpm install",
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "www.abfi.io" }],
      "destination": "https://abfi.io/:path*",
      "permanent": true
    }
  ],
  "functions": {
    "api/health.ts": {
      "maxDuration": 5,
      "memory": 128
    },
    "api/dev-auth/*.ts": {
      "maxDuration": 10,
      "memory": 256
    },
    "api/trpc/routers/*.ts": {
      "maxDuration": 30,
      "memory": 512,
      "includeFiles": "api/_lib/**"
    },
    "api/trpc/[trpc].ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/**/*.ts": {
      "maxDuration": 30,
      "includeFiles": "api/_lib/**"
    }
  },
  "rewrites": [
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
